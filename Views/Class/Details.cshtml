@model ManagementSystem.Models.tb_class

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <h6 class="m-0 font-weight-bold text-primary">Maklumat Kelas</h6>
        </div>


        <div class="card-body">
            <div class="table-responsive">
                <h6 text-align="center">Butiran Maklumat</h6>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Date)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Duration)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Duration)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tb_package.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_package.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tb_user.IC)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_user.IC)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.tb_student.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_student.Name)
                    </dd>

                </dl>
            </div>
            <p>
                <button class="btn btn-warning ">
                    @Html.ActionLink("Kemaskini", "Edit", new { id = Model.ID }, new { style = "color: white" })
                </button>

                <button class="btn btn-outline-primary">
                    @Html.ActionLink("Kembali", "Index", new { style = "color: white" })
                </button>

            </p>
        </div>
    </div>
