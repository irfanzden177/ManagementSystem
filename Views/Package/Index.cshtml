@model IEnumerable<ManagementSystem.Models.tb_package>

@{
    ViewBag.Title = "Index";
}



<body>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Kemaskini Pakej</h1>


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">

                <h6 class="m-0 font-weight-bold text-primary">Senarai Pakej</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["AlertMessage"]
                        </div>

                    }

                    @Html.ActionLink("Tambah Pakej", "Create", null, new { @class = "btn btn-outline-primary" })

                    <hr>
                    <table class="table table-bordered" id="example1" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Masa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sesi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fee)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    Bilangan Pelajar
                                </th>
                                <th>Kemaskini</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Masa)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sesi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fee)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @foreach (var item1 in @ViewBag.test)
                                        {
                                            if (item.ID == item1.Package1)
                                            {
                                                @item1.StudentCount;
                                            }


                                        }

                                    </td>
                                    <td>
                                        @Html.ActionLink("Lihat Butiran", "Details", null, new { id = item.ID }, new { @class = "btn btn-info" })


                                        @Html.ActionLink("Kemaskini", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })

                                        @Html.ActionLink("Padam", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
