@model IEnumerable<ManagementSystem.Models.tb_user>

@{
    ViewBag.Title = "Index";
}


<body>
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Kemaskini Pengguna</h1>


        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">

                <h6 class="m-0 font-weight-bold text-primary">Senarai Pengguna</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <br>

                    @Html.ActionLink("Tambah Pengguna", "Create", null, new { @class = "btn btn-outline-primary" })

                    <hr>
                    <table class="table table-bordered" id="example1" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IC)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Role)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contact)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BatchID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tb_status.Description)
                                </th>
                                <th>Kemaskini</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IC)
                                    </td>

                                    <td>
                                        @if (item.Role == 1)
                                        {
                                            <p>Admin</p>
                                        }
                                        else
                                        {
                                            <p>Tutor</p>
                                        }
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tb_status.Description)
                                    </td>
                                    <td>
                                        <div class="col-sm-12">

                                            @Html.ActionLink("Lihat Butiran", "Details", null, new { id = item.ID }, new { @class = "btn btn-info" })


                                            @Html.ActionLink("Kemaskini", "Edit", new { id = item.ID }, new { @class = "btn btn-warning" })

                                            @Html.ActionLink("Padam", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                        </div>


                                    </td>

                                </tr>
                            }

                        </tbody>

                    </table>





                </div>
            </div>
        </div>
    </div>
</body>



