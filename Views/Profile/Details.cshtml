@model ManagementSystem.Models.tb_user

@{
    Page.Title = "View Profile";
    //Layout = "Your Layout Page goes here";
}

<div class="container">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <h6 class="m-0 font-weight-bold text-primary">Maklumat Pengguna</h6>
        </div>


        <div class="card-body">
            <div class="table-responsive">
                @if (TempData["AlertMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["AlertMessage"]
                    </div>

                }
                <h6 text-align="center">Butiran Maklumat</h6>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.IC)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IC)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>



                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Contact)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Contact)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Kemaskini", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning" })
               

                
                    @Html.ActionLink("Kembali", "Index", "Home",null, new { @class = "btn btn-outline-primary" })
                

            </p>
        </div>
    </div>
</div>